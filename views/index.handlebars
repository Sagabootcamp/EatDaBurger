<div class="jumbotron">
    <div class="container">
        <h1 class="burger-header">Eat da burger</h1>
        <img src="assets/images/burger2.jpg" alt="burger" class="logo">
    </div>
  </div>  
  <div class="container" >
    <div class="row">   
      <div class="col-lg-6">
        <h3>Ready to devour</h3>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                  {{this.burger_name}}
                  <form action="{{this.id}}?_method=PUT" method="POST">
                    <span><button type="submit">Devoured it</button></span>
                  </form>
              </li>
            {{/unless}}          
          {{/each}}
        </ul>
      </div>


      <div class="col-lg-6">
        <h3>Burgers devoured</h3>
          <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  {{this.burger_name}}
                </li>
              {{/if}}
            {{/each}}
          </ul>
      </div>
    </div> <!-- End of row --> 
    <br>
    <br>
    <br>  
      <div class="row add-burger"> 
      <div class="col-lg-12">
        <form class="#" action="/" method="POST">
          <div class="form-group">
            <h4>Enter the burger to be devoured</h4>
            <input class="burger-input" type="text" name="burger_name">
          </div>
          <button class="burger-button" type="submit">Add it to devour!</button>
        </form>
      </div>
    </div> <!--End of row -->
  </div>
</body>
</html>